{
  "manifest_version": 3,
  "name": "Mnemosyne - Semantic History",
  "version": "0.1.0",
  "description": "Local-first semantic history search using vector embeddings and transformers.js.",
  "permissions": [
    "offscreen",
    "storage",
    "tabs",
    "scripting",
    "history"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Mnemosyne Search"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"
  }
}
